<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Credentials.SignIn">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="27dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TextView
                android:id="@+id/Sign_in_textview_id"
                android:layout_width="115dp"
                android:layout_height="39dp"
                android:layout_marginTop="32dp"
                android:text="SignIn"
                android:textColor="#000"
                android:textSize="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/email_id"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_edittexts"
                android:hint="Email id"
                android:inputType="textEmailAddress"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.486"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Sign_in_textview_id" />

            <EditText
                android:id="@+id/password_id"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/rounded_edittexts"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_id" />


            <TextView
                android:id="@+id/forget_password_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Forget password"
                android:textColor="#f44336"
                app:layout_constraintTop_toBottomOf="@+id/password_id"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/signin_btn_id"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_buttons"
                android:text="SignIn"
                android:textColor="#ffffff"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/password_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/password_id"
                app:layout_constraintTop_toBottomOf="@+id/forget_password_id" />

            <TextView
                android:id="@+id/or_id"
                android:layout_width="43dp"
                android:layout_height="36dp"
                android:layout_marginTop="36dp"
                android:text="or"
                android:textSize="22sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/signin_btn_id"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintStart_toStartOf="@+id/signin_btn_id"
                app:layout_constraintTop_toBottomOf="@+id/signin_btn_id" />

            <ImageView
                android:id="@+id/image_view_id"
                android:layout_width="307dp"
                android:layout_height="54dp"
                android:layout_marginTop="36dp"
                android:src="@drawable/shape_vertical_dashed_line"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/signin_btn_id"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="@+id/signin_btn_id"
                app:layout_constraintTop_toBottomOf="@+id/signin_btn_id" />

            <ImageView
                android:id="@+id/google_image_icon_id"
                android:layout_width="41dp"
                android:layout_height="46dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/g_icon"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/image_view_id"
                app:layout_constraintHorizontal_bias="0.477"
                app:layout_constraintStart_toStartOf="@+id/image_view_id"
                app:layout_constraintTop_toBottomOf="@+id/or_id" />

            <TextView
                android:id="@+id/create_account_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Don't have an account?"
                app:layout_constraintEnd_toStartOf="@+id/create_new_one_id"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signin_btn_id" />

            <TextView
                android:id="@+id/create_new_one_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:text="Create new one"
                android:textColor="#03A9F4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/google_image_icon_id" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>